var <%= controller_class_name %> = function($scope, $http) {
  $scope.<%= model_list_name %> = <%= model_list_name %> || [];

  // Maybe routes is a better place
  $scope.creation_path = '<%= "#{path}/new" %>';

  $scope.list = function() {
    $http.get('<%= path %>.json').success(function(data) {
      $scope.<%= model_list_name %> = data;
    });
  }

}
