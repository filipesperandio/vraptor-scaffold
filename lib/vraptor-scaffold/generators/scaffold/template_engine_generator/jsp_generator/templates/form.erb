<head>
  <script src="<%="/javascripts/#{class_name}.js"%>"></script>
  <script src="<%="/javascripts/#{controller_class_name}.js"%>"></script>
</head>

<c:if test="${not empty errors}">
<c:forEach items="${errors}" var="error">
<div class="control-group error">
  <label class="control-label" for="inputError"> ${error.category} - ${error.message}</label>
</div>
</c:forEach>
</c:if>

<script>
  <%=model_parameter_name%> = ${json};
</script>

<div class="row" ng-controller="<%=controller_class_name%>">
  <div class="span6">
    <div class="well">
      <form action="<%= path %>" method="post" class="form-horizontal" id="<%=model_parameter_name%>Form">
        <fieldset>
          <legend><%= model_parameter_name %></legend>
          <c:if test="${not empty <%= model_parameter_name %>.id}">
          <input type="hidden" name="<%= model_parameter_name %>.id" value="${<%= model_parameter_name%>.id}"
                 ng-model="<%=model_parameter_name%>.id" />
          <input type="hidden" name="_method" value="put"/>
          </c:if>

          <% @attributes.each do |att| -%>
            <div class="control-group">
              <label class="control-label" for="<%= model_parameter_name %>.<%=att.name%>">
                <%= att.html_label %>
              </label>
              <div class="controls">
                <input type="text" name="<%= model_parameter_name %>.<%=att.name%>" id="<%= model_parameter_name %>.<%=att.name%>" value="${<%=model_parameter_name%>.<%=att.name%>}"
                       ng-model="<%=model_parameter_name%>.<%=att.name%>" />
              </div>
            </div>
          <% end -%>

          <div class="form-actions">
            <div class="pull-right">
              <button type="submit" class="btn btn-primary">Save!</button>
              <a href="<%= path %>" class="btn">Cancel</a>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
  <div class="span6"></div>
</div>

